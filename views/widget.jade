extends layout

block content
  h1= title
  p Welcome to #{title}
  //- form(id="comment-form" action='/resources/1/comments' method='POST')
  textarea(name='comment' id='textbox')
  button(id='send') Send
  button(id='reply') Reply
  button(id='edit') Edit
  button(id='delete') Delete
  button(id='upvote') Upvote
  button(id='downvote') Downvote
  button(id='novote') Novote
  button(id='getComments') Get Comments
  .container(ng-app="myapp")
    .comment-list(ng-controller="CommentController as comments")
      .parent(ng-repeat="c in comments")
        .something(ng-repeat="comm in c")
          | {{comm.text}}
          .child(ng-show="comm.children")
            | {{comm.children}}